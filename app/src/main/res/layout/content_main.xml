<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sumit.sjsu.broadcast.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/mainAct_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/mainAct_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/dataEditTxt"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:inputType="text"
        android:layout_below="@+id/mainAct_title"
        android:layout_marginTop="54dp"
        android:layout_alignRight="@+id/mainAct_title"
        android:layout_alignEnd="@+id/mainAct_title" />

    <Button
        android:id="@+id/britishBtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="350px"
        android:layout_height="150px"
        android:background="@color/black"
        android:gravity="center"
        android:onClick="sendToReciver"
        android:text="@string/datasendbutton"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="179dp"
        android:layout_below="@+id/mainAct_title" />
    <Button
        android:id="@+id/exitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:gravity="center"
        android:text="@string/exitBtnTxt"
        android:onClick="exitApp"
        android:textColor="@color/white"

        android:layout_marginTop="64dp"
        android:layout_below="@+id/britishBtn"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
